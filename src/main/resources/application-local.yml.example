spring:
  datasource:
    driver-class-name: org.postgresql.Driver
    username: username
    password: password
    url: jdbc:postgresql://localhost:5432/todo_db

# JWT Configuration
jwt:
  secret-key: YourSuperSecretKeyMustBeAtLeast256BitsLongForHS256Algorithm!
  access-token-expiration: 900000    # 15 minutes in milliseconds
  refresh-token-expiration: 604800000 # 7 days in milliseconds
  issuer: todo-summarized

# AI Summary Configuration
# Options AUTO | OPENAI | GEMINI
ai:
  enabled: true
  provider: GEMINI

# OpenAI Configuration
openai:
  api-key: your-openai-api-key-here
  model: gpt-5-nano
  enabled: true
  max-tokens: 500
  temperature: 0.7
  timeout-seconds: 30

# Gemini Configuration
gemini:
  api-key: your-gemini-api-key-here
  model: gemini-2.5-flash-lite
  enabled: false
  max-tokens: 500
  temperature: 0.7
  timeout-seconds: 30

# Rate Limiting Configuration
ratelimit:
  enabled: true
  ai-summary:
    max-requests: 10
    window-seconds: 3600
  daily-summary:
    max-requests: 10
    window-seconds: 3600


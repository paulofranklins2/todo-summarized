spring:
  datasource:
    url: ${DB_URL}
    username: ${DB_USERNAME}
    password: ${DB_PASSWORD}
    driver-class-name: org.postgresql.Driver

# OpenAI Configuration
openai:
  api-key: ${OPENAI_API_KEY}
  model: ${OPENAI_MODEL:gpt-4o-mini}
  enabled: ${OPENAI_ENABLED:true}
  max-tokens: ${OPENAI_MAX_TOKENS:500}
  temperature: ${OPENAI_TEMPERATURE:0.7}
  timeout-seconds: ${OPENAI_TIMEOUT_SECONDS:30}

#Rate Limitation Config
ratelimit:
  enabled: ${RATELIMIT_ENABLED:true}
  ai-summary:
    max-requests: ${RATELIMIT_AI_SUMMARY_MAX_REQUESTS:10}
    window-seconds: ${RATELIMIT_AI_SUMMARY_WINDOW_SECONDS:3600}
  daily-summary:
    max-requests: ${RATELIMIT_DAILY_SUMMARY_MAX_REQUESTS:10}
    window-seconds: ${RATELIMIT_DAILY_SUMMARY_WINDOW_SECONDS:3600}

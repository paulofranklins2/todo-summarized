spring:
  datasource:
    url: ${DB_URL}
    username: ${DB_USERNAME}
    password: ${DB_PASSWORD}
    driver-class-name: org.postgresql.Driver

# JWT Configuration
jwt:
  secret-key: ${JWT_SECRET_KEY}
  access-token-expiration: ${JWT_ACCESS_TOKEN_EXPIRATION:900000}
  refresh-token-expiration: ${JWT_REFRESH_TOKEN_EXPIRATION:604800000}
  issuer: ${JWT_ISSUER:todo-summarized}

# AI Summary Configuration
# Options AUTO | OPENAI | GEMINI
ai:
  enabled: ${AI_ENABLED:true}
  provider: ${AI_PROVIDER:AUTO}

# OpenAI Configuration
openai:
  api-key: ${OPENAI_API_KEY:}
  model: ${OPENAI_MODEL:gpt-5-nano}
  enabled: ${OPENAI_ENABLED:true}
  max-tokens: ${OPENAI_MAX_TOKENS:500}
  temperature: ${OPENAI_TEMPERATURE:0.7}
  timeout-seconds: ${OPENAI_TIMEOUT_SECONDS:30}

# Gemini Configuration
gemini:
  api-key: ${GEMINI_API_KEY:}
  model: ${GEMINI_MODEL:gemini-2.5-flash-lite}
  enabled: ${GEMINI_ENABLED:false}
  max-tokens: ${GEMINI_MAX_TOKENS:500}
  temperature: ${GEMINI_TEMPERATURE:0.7}
  timeout-seconds: ${GEMINI_TIMEOUT_SECONDS:30}

#Rate Limitation Config
ratelimit:
  enabled: ${RATELIMIT_ENABLED:true}
  ai-summary:
    max-requests: ${RATELIMIT_AI_SUMMARY_MAX_REQUESTS:10}
    window-seconds: ${RATELIMIT_AI_SUMMARY_WINDOW_SECONDS:3600}
  daily-summary:
    max-requests: ${RATELIMIT_DAILY_SUMMARY_MAX_REQUESTS:10}
    window-seconds: ${RATELIMIT_DAILY_SUMMARY_WINDOW_SECONDS:3600}
